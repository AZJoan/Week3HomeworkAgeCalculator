<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Hello, please enter your information and click Confirm"
          fx:id="helloText"
          GridPane.rowIndex="1" GridPane.columnIndex="1" ></Text>

    <TextField text="Name"
    fx:id="userInput"
    GridPane.rowIndex="3" GridPane.columnIndex="1"></TextField>


    <Button text="Confirm"
            fx:id="confirmButton"
            onAction="#clickedConfirm"
            GridPane.rowIndex="5" GridPane.columnIndex="1"></Button>

    <!--<Label text="Name:"-->
           <!--GridPane.rowIndex="2"-->
           <!--GridPane.columnIndex="0"></Label>-->


    <Text text=""
          fx:id="resultText"
          GridPane.rowIndex="7" GridPane.columnIndex="1" ></Text>
    <Text text="Age in one year: "
          fx:id="oneText"
          GridPane.rowIndex="9" GridPane.columnIndex="1" ></Text>
    <Text text="Age in five years: "
          fx:id="fiveText"
          GridPane.rowIndex="11" GridPane.columnIndex="1" ></Text>
    <Text text="Age in ten years: "
          fx:id="tenText"
          GridPane.rowIndex="13" GridPane.columnIndex="1" ></Text>



    <Button text="Reset"
            fx:id="resetButton"
            onAction="#clickedReset"
            GridPane.rowIndex="17" GridPane.columnIndex="1"></Button>
</GridPane>